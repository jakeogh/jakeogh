+gboolean GTKGeom3DWindow::darea_render_signal( GtkGLArea *area,
+					       GdkGLContext *context,
+					       gpointer object )
+{
+    static bool first_render = true;
+    if( first_render ) {
+	first_render = false;
+	const char *version = (const char *)glGetString( GL_VERSION );
+	const char *renderer = (const char *)glGetString( GL_RENDERER );
+	ibsimu.message( 1 ) << "GL render: version=\"" << (version ? version : "NULL")
+			     << "\" renderer=\"" << (renderer ? renderer : "NULL") << "\"\n";
+	int major, minor;
+	gdk_gl_context_get_version( context, &major, &minor );
+	ibsimu.message( 1 ) << "GDK context: " << major << "." << minor
+			     << (gdk_gl_context_get_forward_compatible( context ) ? " core" : " compat")
+			     << "\n";
+	GError *err = gtk_gl_area_get_error( area );
+	if( err )
+	    ibsimu.message( 1 ) << "GtkGLArea error: " << err->message << "\n";
+	ibsimu.flush();
+    }
+
+    GTKGeom3DWindow *window = (GTKGeom3DWindow *)object;
+    window->draw( NULL );
+    return( TRUE );
+}
+
