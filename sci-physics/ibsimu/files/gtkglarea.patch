+GdkGLContext *GTKGeom3DWindow::darea_create_gl_context_signal( GtkGLArea *area,
+							       gpointer object )
+{
+    GdkWindow *gdk_window = gtk_widget_get_window( GTK_WIDGET(area) );
+    if( !gdk_window ) {
+	ibsimu.message( 1 ) << "create-context: no GdkWindow yet\n";
+	return( NULL );
+    }
+
+    GError *error = NULL;
+    GdkGLContext *context = gdk_window_create_gl_context( gdk_window, &error );
+    if( error ) {
+	ibsimu.message( 1 ) << "GL context creation failed: " << error->message << "\n";
+	gtk_gl_area_set_error( area, error );
+	return( NULL );
+    }
+
+    // Request compatibility profile for immediate-mode GL (glBegin/glEnd)
+    gdk_gl_context_set_forward_compatible( context, FALSE );
+    gdk_gl_context_set_use_es( context, FALSE );
+
+    // Do NOT call gdk_gl_context_realize() here â€” GtkGLArea does it after this signal
+    ibsimu.message( 1 ) << "create-context: created, forward_compatible=FALSE\n";
+    ibsimu.flush();
+
+    return( context );
+}
